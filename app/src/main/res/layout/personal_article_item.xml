<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="90dp"
    android:background="@drawable/shape_bgwhite_bottomline1">
    <LinearLayout
        android:id="@+id/userimg2"
        android:layout_width="55dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="15dp"
        android:orientation="vertical"
        android:gravity="center_vertical">
        <ImageView
            android:id="@+id/objImg_item"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@drawable/circular_image"/>

        <TextView
            android:id="@+id/objName_item"
            android:paddingTop="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorBlueGray1"
            android:textSize="16sp"
            android:textAlignment="center"
            android:text="박현지"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/article_content_tfd"
            android:layout_marginLeft="10dp"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="15dp"
            android:textColor="@color/colorBlueGray1"
            android:text="hihi"/>

        <TextView
            android:id="@+id/invisible_content_key"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:textColor="@android:color/transparent"/>

        <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/status_iv"
            android:visibility="gone"/>
    </LinearLayout>
</LinearLayout>