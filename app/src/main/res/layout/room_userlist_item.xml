<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="80dp"
    android:background="@drawable/shape_bgwhite_bottomline1">

    <LinearLayout
        android:layout_width="55dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="15dp"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:id="@+id/userImgholder">
        <ImageView
            android:id="@+id/userImg_item"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@drawable/circular_image"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="15dp"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:layout_toRightOf="@id/userImgholder">
        <TextView
            android:id="@+id/userName_item"
            android:paddingTop="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorBlueGray1"
            android:textSize="18sp"/>
        <TextView
            android:id="@+id/userClass_item"
            android:layout_below="@+id/userName_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/colorGray2"
            android:paddingTop="5dp"/>
    </LinearLayout>
    <ImageView
        android:id="@+id/status_btn"
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:layout_centerVertical="true"
        android:background="@drawable/writeobservbtn"/>


</RelativeLayout>