<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="95dp"
    android:background="@drawable/shape_bgwhite_bottomline1"
    android:gravity="center_vertical">
    <LinearLayout
        android:layout_width="55dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="15dp"
        android:orientation="vertical"
        android:gravity="center_vertical">
        <ImageView
            android:id="@+id/objImg_item"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@drawable/circular_image"/>

        <TextView android:id="@+id/objName_item"
            android:paddingTop="3dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorBlueGray1"
            android:textSize="16sp"
            android:textAlignment="center"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/article_content_tfd"
            android:layout_width="fill_parent"
            android:layout_height="65dp"
            android:paddingTop="10dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingBottom="10dp"
            android:ellipsize="end"
            android:maxLines="4"
            android:textColor="@color/colorBlueGray1"
            android:textSize="15sp"/>
        <TextView
            android:id="@+id/objRoom_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:textSize="14sp"
            android:paddingTop="20dp"
            android:paddingRight="10dp"
            android:paddingBottom="4dp"
            android:textAlignment="textEnd"
            android:textColor="@color/colorBlueGray1"/>

        <TextView
            android:id="@+id/invisible_content_key"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:textColor="@android:color/transparent"/>
        <TextView
            android:id="@+id/comment_num"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="0"/>
</RelativeLayout>

</LinearLayout>