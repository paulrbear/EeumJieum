<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fab = "http://wchemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="dev.erica.hyunji.eeumjieum.ObservReportWorkerActivity">

    //top title bar
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:orientation="horizontal"
            android:background="@color/colorCyanMain">
            <Button
                android:id="@+id/backbtn"
                android:layout_marginTop="@dimen/topBar_Icon_Margin_Top"
                android:layout_marginLeft="@dimen/topBar_Icon_Margin"
                android:layout_width="@dimen/topBar_Icon_Height"
                android:layout_height = "@dimen/topBar_Icon_Height"
                android:background="@drawable/menu" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:layout_marginTop="@dimen/topBar_Title_Margin_Top"
                android:text="관찰일지"
                android:textAlignment="center"
                android:textSize="@dimen/topBar_Title_Size"
                android:textStyle="bold"
                android:textColor="@android:color/white"/>
            <Button
                android:id="@+id/search"
                android:layout_marginTop="@dimen/topBar_Icon_Margin_Top"
                android:layout_marginRight="@dimen/topBar_Icon_Margin"
                android:layout_width="@dimen/topBar_Icon_Width"
                android:layout_height = "@dimen/topBar_Icon_Height"
                android:background="@android:color/transparent"/>
        </LinearLayout>
    </FrameLayout>
    //top calender
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:layout_marginTop="55dp"
            android:orientation="horizontal">

            <Button
                android:background="@color/colorGray1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.3"/>
            <Button
                android:background="@android:color/white"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/cal_sun_1"/>
            <Button
                android:background="@android:color/white"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/cal_mon_1"/>
            <Button
                android:background="@android:color/white"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/cal_tue_1"/>
            <Button
                android:background="@android:color/white"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/cal_wed_1"/>
            <Button
                android:background="@android:color/white"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/cal_thu_1"/>
            <Button
                android:background="@android:color/white"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/cal_fri_1"/>
            <Button
                android:background="@android:color/white"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/cal_sat_1"/>
        </LinearLayout>
    </LinearLayout>
    //END OF CALENDAR TOP
    REST OF THE CALENDAR
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="59dp"
        android:layout_height="wrap_content">

        YEAR AND MONTH
        <RelativeLayout
            android:layout_weight="1.3"
            android:layout_width="0dp"
            android:layout_height="65dp"
            android:orientation="vertical"
            android:background="@color/colorGray1">
            YEAR
            <LinearLayout
                android:layout_marginTop="1dp"
                android:id="@+id/cal_yearView"
                android:layout_width="match_parent"
                android:layout_height="18dp">
                <Button
                    android:paddingTop="1dp"
                    android:layout_gravity="end"
                    android:background="@color/colorGray1"
                    android:text="1000"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/colorBlueGray1"
                    android:textSize="16sp"
                    android:id="@+id/cal_year"/>
            </LinearLayout>
            MONTH
            <LinearLayout
                android:layout_below="@id/cal_yearView"
                android:layout_width="match_parent"
                android:layout_height="32dp">
                <Button
                    android:layout_gravity="top"
                    android:background="@color/colorGray1"
                    android:text="00"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/colorCyanMain"
                    android:textSize="32sp"
                    android:textStyle="bold"
                    android:id="@+id/cal_month"/>
            </LinearLayout>
        </RelativeLayout>


        NAME AND DATE
        <LinearLayout
            android:layout_weight="7"
            android:layout_width="0dp"
            android:layout_height="65dp"
            android:orientation="vertical"
            android:background="@android:color/white">
            NAME
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:orientation="horizontal"
                android:background="@android:color/white"
                android:gravity="bottom">
                <Button
                    android:background="@android:color/white"
                    android:text="일"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textColor="@color/colorMagenta"
                    android:textSize="@dimen/calendar_Date_Name_Size"
                    android:id="@+id/cal_sun_2"/>
                <Button
                    android:background="@android:color/white"
                    android:text="월"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textColor="@color/colorBlueGray1"
                    android:textSize="@dimen/calendar_Date_Name_Size"
                    android:id="@+id/cal_mon_2"/>
                <Button
                    android:background="@android:color/white"
                    android:text="화"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textColor="@color/colorBlueGray1"
                    android:textSize="@dimen/calendar_Date_Name_Size"
                    android:id="@+id/cal_tue_2"/>
                <Button
                    android:background="@android:color/white"
                    android:text="수"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textColor="@color/colorBlueGray1"
                    android:textSize="@dimen/calendar_Date_Name_Size"
                    android:id="@+id/cal_wed_2"/>
                <Button
                    android:background="@android:color/white"
                    android:text="목"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textColor="@color/colorBlueGray1"
                    android:textSize="@dimen/calendar_Date_Name_Size"
                    android:id="@+id/cal_thu_2"/>
                <Button
                    android:background="@android:color/white"
                    android:text="금"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textColor="@color/colorBlueGray1"
                    android:textSize="@dimen/calendar_Date_Name_Size"
                    android:id="@+id/cal_fri_2"/>
                <Button
                    android:background="@android:color/white"
                    android:text="토"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textColor="@android:color/holo_blue_light"
                    android:textSize="@dimen/calendar_Date_Name_Size"
                    android:id="@+id/cal_sat_2" />
            </LinearLayout>

            DATE
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="41dp"
                android:orientation="horizontal"
                android:background="@android:color/white"
                android:paddingBottom="4dp">
                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center">
                    <Button
                        android:background="@android:color/white"
                        android:text="4"
                        android:layout_width="33dp"
                        android:layout_height="33dp"
                        android:textColor="@color/colorMagenta"
                        android:textSize="@dimen/calendar_Date_Number_Size"
                        android:textStyle="bold"
                        android:id="@+id/cal_sun_3"
                        android:onClick="onClick_calendar"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center">
                    <Button
                        android:background="@android:color/white"
                        android:text="4"
                        android:layout_width="33dp"
                        android:layout_height="33dp"
                        android:textColor="@color/colorGray3"
                        android:textSize="@dimen/calendar_Date_Number_Size"
                        android:textStyle="bold"
                        android:id="@+id/cal_mon_3"
                        android:onClick="onClick_calendar"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center">
                    <Button
                        android:background="@android:color/white"
                        android:text="4"
                        android:layout_width="33dp"
                        android:layout_height="33dp"
                        android:textColor="@color/colorGray3"
                        android:textSize="@dimen/calendar_Date_Number_Size"
                        android:textStyle="bold"
                        android:id="@+id/cal_tue_3"
                        android:onClick="onClick_calendar"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center">
                    <Button
                        android:background="@android:color/white"
                        android:text="4"
                        android:layout_width="33dp"
                        android:layout_height="33dp"
                        android:textColor="@color/colorGray3"
                        android:textSize="@dimen/calendar_Date_Number_Size"
                        android:textStyle="bold"
                        android:id="@+id/cal_wed_3"
                        android:onClick="onClick_calendar"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center">
                    <Button
                        android:background="@android:color/white"
                        android:text="4"
                        android:layout_width="33dp"
                        android:layout_height="33dp"
                        android:textColor="@color/colorGray3"
                        android:textSize="@dimen/calendar_Date_Number_Size"
                        android:textStyle="bold"
                        android:id="@+id/cal_thu_3"
                        android:onClick="onClick_calendar"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center">
                    <Button
                        android:background="@android:color/white"
                        android:text="4"
                        android:layout_width="33dp"
                        android:layout_height="33dp"
                        android:textColor="@color/colorGray3"
                        android:textSize="@dimen/calendar_Date_Number_Size"
                        android:textStyle="bold"
                        android:id="@+id/cal_fri_3"
                        android:onClick="onClick_calendar"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center">
                    <Button
                        android:background="@android:color/white"
                        android:text="4"
                        android:layout_width="33dp"
                        android:layout_height="33dp"
                        android:textColor="@android:color/holo_blue_light"
                        android:textSize="@dimen/calendar_Date_Number_Size"
                        android:textStyle="bold"
                        android:id="@+id/cal_sat_3"
                        android:onClick="onClick_calendar"/>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>



<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="125dp"
    android:layout_marginBottom="60dp">
    //article container
    <ListView
        android:layout_marginTop="50dp"
        android:id="@+id/articlelistview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:choiceMode="singleChoice"/>

    //room select
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent">
        <Button
            android:id="@+id/tfdbtn1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingTop="3dp"
            android:layout_gravity="center_horizontal"
            android:textSize="19sp"
            android:textColor="@color/colorBlueDark1"
            android:background="@drawable/shape_bggray_bottomline1"
            android:onClick="onClick_roomlist"
            android:text="시설전체"
            />
        <Button
            android:id="@+id/tfdbtn2"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:paddingTop="5dp"
            android:layout_gravity="center_horizontal"
            android:textSize="19sp"
            android:textColor="@color/colorBlueDark1"
            android:background="@color/colorGray1"
            android:layout_marginTop="50dp"
            android:onClick="onClick_roomlist"
            android:visibility="gone"
            android:text="전체"
            />
        <Button
            android:id="@+id/tfdbtn3"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:paddingTop="5dp"
            android:layout_gravity="center_horizontal"
            android:textSize="19sp"
            android:textColor="@color/colorBlueDark1"
            android:background="@color/colorGray1"
            android:layout_marginTop="100dp"
            android:onClick="onClick_roomlist"
            android:visibility="gone"
            android:text="은혜방"/>
        <Button
            android:id="@+id/tfdbtn4"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:paddingTop="5dp"
            android:layout_gravity="center_horizontal"
            android:textSize="19sp"
            android:textColor="@color/colorBlueDark1"
            android:background="@color/colorGray1"
            android:layout_marginTop="150dp"
            android:onClick="onClick_roomlist"
            android:visibility="gone"
            android:text="기쁨방"/>
        <Button
            android:id="@+id/tfdbtn5"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:paddingTop="5dp"
            android:layout_gravity="center_horizontal"
            android:textSize="19sp"
            android:textColor="@color/colorBlueDark1"
            android:background="@color/colorGray1"
            android:layout_marginTop="200dp"
            android:onClick="onClick_roomlist"
            android:visibility="gone"
            android:text="믿음방"/>
    </FrameLayout>

</FrameLayout>

    //floating action button
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="320dp"
        android:layout_marginTop="530dp">
        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitCenter"
            android:onClick="onClick_fabbtn"/>

        <ImageView
            android:layout_marginTop="-2dp"
            android:layout_gravity="center"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/sswrite"/>
    </FrameLayout>

    //bottom pop-menu (message)
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/notice_btn"
            android:layout_marginTop="560dp"
            android:layout_marginLeft="15dp"
            android:onClick="onClick_noticebtn"
            android:visibility="gone"
            android:background="@drawable/dual_notice_btn"/>
        <TextView
            android:layout_width="115dp"
            android:layout_height="50dp"
            android:id="@+id/notice_label"
            android:layout_marginTop="575dp"
            android:layout_marginLeft="75dp"
            android:text="공지사항"
            android:textSize="18dp"
            android:visibility="gone"
            android:textColor="@color/colorBlueDark2"/>

        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/schedule_btn"
            android:layout_marginTop="490dp"
            android:layout_marginLeft="15dp"
            android:onClick="onClick_scheduletbtn"
            android:visibility="gone"
            android:background="@drawable/dual_schedule_btn"/>
        <TextView
            android:layout_width="115dp"
            android:layout_height="50dp"
            android:id="@+id/schedule_label"
            android:layout_marginTop="505dp"
            android:layout_marginLeft="75dp"
            android:text="시설일정"
            android:textSize="18dp"
            android:visibility="gone"
            android:textColor="@color/colorBlueDark2"/>


    </FrameLayout>

    //bottom pop-menu (note)
    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right">

        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/program_btn"
            android:layout_marginTop="560dp"
            android:layout_marginLeft="260dp"
            android:onClick="onClick_programbtn"
            android:visibility="gone"
            android:background="@drawable/dual_program_btn"/>
        <TextView
            android:layout_width="115dp"
            android:layout_height="50dp"
            android:id="@+id/program_label"
            android:layout_marginTop="575dp"
            android:layout_marginLeft="135dp"
            android:text="프로그램일지"
            android:textAlignment="textEnd"
            android:textSize="18dp"
            android:visibility="gone"
            android:textColor="@color/colorBlueDark2"/>

        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/observ_report_btn"
            android:layout_marginTop="490dp"
            android:layout_marginLeft="260dp"
            android:onClick="onClick_observreportbtn"
            android:visibility="gone"
            android:background="@drawable/dual_observ_report_btn"/>
        <TextView
            android:layout_width="115dp"
            android:layout_height="50dp"
            android:id="@+id/observ_report_label"
            android:layout_marginTop="505dp"
            android:layout_marginLeft="185dp"
            android:text="관찰일지"
            android:textSize="18dp"
            android:visibility="gone"
            android:textColor="@color/colorBlueDark2"/>

        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/work_report_btn"
            android:layout_marginTop="420dp"
            android:layout_marginLeft="260dp"
            android:onClick="onClick_workreportbtn"
            android:visibility="gone"
            android:background="@drawable/dual_work_report_btn"/>
        <TextView
            android:layout_width="115dp"
            android:layout_height="50dp"
            android:id="@+id/work_report_label"
            android:layout_marginTop="435dp"
            android:layout_marginLeft="185dp"
            android:text="근무일지"
            android:textSize="18dp"
            android:visibility="gone"
            android:textColor="@color/colorBlueDark2"/>

    </FrameLayout>

    //bottom menu
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom">

        <dev.erica.hyunji.eeumjieum.BottomTabNavi
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/bottomNavi">

        </dev.erica.hyunji.eeumjieum.BottomTabNavi>
    </FrameLayout>


</FrameLayout>
